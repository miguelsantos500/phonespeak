<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text=" "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblDialogTitle"
            android:autoText="true"
            android:textSize="32sp" />

        <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnCancelDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/btnSetDialog"
                android:layout_alignStart="@+id/btnSetDialog"
                android:layout_marginBottom="94dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnSetDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set"
                android:layout_alignBottom="@+id/btnCancelDialog"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="33dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>