<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_granularity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.ipleiria.estg.dei.phonespeak.GranularityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblGranularityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/granularity_title"
            android:textSize="36sp"
            android:textStyle="normal|bold" />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rdBtnMinute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/minute"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/rdBtnHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hour"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/rdBtnDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/day"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/rdBtnWeek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/week"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/rdBtnMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/month"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton
                android:id="@+id/rdBtnYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/year"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnNextActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="onClickBtnNextActivity"
            android:text="@string/next" />
    </LinearLayout>
</RelativeLayout>
