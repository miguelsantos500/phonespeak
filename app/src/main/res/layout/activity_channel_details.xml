<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_channel_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="pt.ipleiria.estg.dei.phonespeak.ChannelDetailsActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:text="@string/channel_label_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblId"
            android:layout_weight="2" />

        <TextView
            android:text="@string/not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtChannelId"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:text="@string/channel_label_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblName"
            android:layout_weight="2" />

        <TextView
            android:text="@string/not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtChannelName"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:text="@string/channel_label_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblDescription"
            android:layout_weight="2" />

        <TextView
            android:text="@string/not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtChannelDescription"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:text="@string/channel_label_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblLatitude"
            android:layout_weight="2" />

        <TextView
            android:text="@string/not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtChannelLatitude"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:text="@string/channel_label_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblLongitude"
            android:layout_weight="2" />

        <TextView
            android:text="@string/not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtChannelLongitude"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:text="@string/channel_label_created_at"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblCreatedAt"
            android:layout_weight="2" />

        <TextView
            android:text="@string/not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtChannelCreatedAt"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:text="@string/channel_label_elevantion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblElevation"
            android:layout_weight="2" />

        <TextView
            android:text="@string/not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtChannelElevation"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:text="@string/channel_label_last_entry_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblLastEntryId"
            android:layout_weight="2" />

        <TextView
            android:text="@string/not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtChannelLastEntryId"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:text="@string/channel_label_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblRanking"
            android:layout_weight="2" />

        <TextView
            android:text="@string/not_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtChannelRanking"
            android:layout_weight="1" />

    </LinearLayout>


</LinearLayout>
